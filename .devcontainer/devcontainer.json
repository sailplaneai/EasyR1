{
    "build": {
      "dockerfile": "Dockerfile"
    },
    "hostRequirements": {
      "gpu": "optional"
    },
    "runArgs": [
      "--gpus=all",
      "--privileged"
    ],
    "workspaceFolder": "/workspace",
    "features": {
      "ghcr.io/devcontainers/features/nvidia-cuda:1": {}
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.defaultProfile.linux": "bash"
        }
      }
    }
  }